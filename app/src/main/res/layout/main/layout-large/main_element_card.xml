<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:main_element_card="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
            android:id="@+id/main_card"
            main_element_card:cardUseCompatPadding="true"
            main_element_card:cardElevation="6dp"
            main_element_card:cardCornerRadius="6dp"
            android:layout_width="160dp"
            android:focusable="true"
            android:clickable="true"
            main_element_card:cardBackgroundColor="@color/mcard_backgraund"
            android:foreground="?android:attr/selectableItemBackground"

            android:layout_height="180dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        android:background="@color/buttonColor">
            <ImageView
                    android:id="@+id/main_card_image"
                    android:background="@drawable/img_medicament"
                    android:layout_gravity="center" android:layout_marginTop="8dp"
                    android:layout_width="100dp" android:layout_height="100dp"/>
            <TextView
                    android:text="@string/medicament"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/main_card_text" android:textAlignment="center"
                    android:textSize="22sp" android:textAllCaps="false" android:layout_marginTop="6dp"
                    android:textColor="@android:color/white"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>