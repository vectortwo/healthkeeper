<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:main_element_card="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
            android:id="@+id/main_emply_cardview"
            main_element_card:cardUseCompatPadding="true"
            main_element_card:cardElevation="4dp"
            main_element_card:cardCornerRadius="3dp"
            android:focusable="true"
            android:clickable="true"
            main_element_card:cardBackgroundColor="@color/buttonColorInactive"
            android:foreground="?android:attr/selectableItemBackground"

            android:layout_height="@dimen/small_card_height" android:layout_width="@dimen/small_card_width">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="activity_card"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/card_type"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>