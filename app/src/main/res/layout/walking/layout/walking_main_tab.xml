<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".activities.walking.Walking_main_fragment"
              android:orientation="vertical">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/walking_main_tab_text"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>

    <com.vectortwo.healthkeeper.widgets.FitDoughnut
            android:id="@+id/walking_doughnut"
            app:fdText="0min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.13"
            app:fdColorPrimary="@android:color/holo_orange_light"
            app:fdColorSecondary="@android:color/white"/>

</LinearLayout>