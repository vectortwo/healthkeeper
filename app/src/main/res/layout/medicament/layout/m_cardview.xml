<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!-- A CardView that contains a TextView -->
        <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_gravity="center"
                card_view:cardElevation="6dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="match_parent"



                card_view:cardBackgroundColor="@color/mcard_backgraund" android:layout_height="110dp">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                                android:layout_width="100dp"
                                card_view:srcCompat="@mipmap/drug"
                                android:id="@+id/imageView5"
                                android:layout_height="100dp"
                                android:layout_marginLeft="5dp"
                                android:scaleType="fitStart"
                                android:layout_gravity="center_vertical"/>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                        android:text="MEDICAMENT NAME"
                                        android:layout_marginTop="3dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" android:id="@+id/mcard_name"
                                        android:textSize="18sp" android:textAlignment="center"
                                        android:textStyle="normal|bold"
                                        android:maxLines="1"
                                        android:textAppearance="@style/TextAppearance.AppCompat"/>
                                <TextView
                                        android:text="@string/medicament_specification"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:maxLines="2"
                                        android:scrollbars = "vertical"
                                        android:id="@+id/mcard_description"
                                        android:textAlignment="center"/>
                                <View
                                        android:layout_gravity="center_horizontal"

                                        android:layout_marginLeft="15dp"
                                        android:layout_marginRight="15dp"
                                        android:background="@drawable/line"
                                        android:layout_width="match_parent" android:layout_height="3dp"/>

                                <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"

                                        android:weightSum="2">

                                        <TextView
                                                android:text="@string/medicament_dosage"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginRight="5dp"
                                                android:id="@+id/textView6"
                                                android:layout_weight="1"
                                                android:maxLines="1"
                                                android:textAlignment="center" android:textStyle="normal|bold"/>
                                        <TextView
                                                android:text="@string/medicament_data"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginRight="5dp"
                                                android:id="@+id/textView5"
                                                android:maxLines="1"
                                                android:layout_weight="1" android:textAlignment="center"
                                                android:textStyle="normal|bold"/>
                                </LinearLayout>
                                <View
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginRight="15dp"
                                        android:background="@drawable/line"
                                        android:layout_width="match_parent" android:layout_height="3dp"/>
                                <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:weightSum="2">

                                        <TextView
                                                android:text="0.25"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginRight="5dp"
                                                android:id="@+id/mcard_dose"
                                                android:maxLines="1"
                                                android:layout_weight="1" android:textAlignment="center"
                                                android:textStyle="normal|bold"/>
                                        <TextView
                                                android:text="ср 1:30pm"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="5dp"
                                                android:layout_marginRight="5dp"
                                                android:id="@+id/mcard_nexttime"
                                                android:layout_weight="1"
                                                android:maxLines="1"
                                                android:textAlignment="center" android:textStyle="normal|bold"/>

                                </LinearLayout>
                        </LinearLayout>
                </LinearLayout>
        </android.support.v7.widget.CardView>

</LinearLayout>