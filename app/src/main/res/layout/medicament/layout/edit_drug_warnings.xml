<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/editDrug_warnings_layout"
            android:layout_marginLeft="10dp" android:layout_marginRight="10dp">

        <EditText
                android:layout_width="match_parent"
                android:id="@+id/editDrug_warnings" android:textSize="18sp"
                android:scrollbars="vertical"
                android:clickable="true"
                android:background="@android:color/transparent"
                android:animateLayoutChanges="true"
                android:text="@string/test_descr_and_warnings"
                android:textAlignment="center" android:textColor="@color/active_text" android:layout_height="60dp"/>
        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/editDrug_warningsBTN_layoyt">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                <Button
                        android:id="@+id/editDrug_warnings_no"
                        android:theme="@style/buttonMaterial"
                        android:src="@drawable/ic_done"
                        android:visibility="visible"
                        android:drawableTop="@drawable/ic_clear"
                        android:paddingTop="3sp"

                        android:background="@drawable/buttom_round_cancel"

                        android:layout_marginLeft="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                       />
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">
                <Button
                        android:id="@+id/editDrug_warnings_ok"
                        android:theme="@style/buttonMaterial"
                        android:src="@drawable/ic_done"
                        android:drawableTop="@drawable/ic_done"
                        android:paddingTop="3sp"

                        android:background="@drawable/buttom_round_ok"

                        android:layout_marginRight="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:visibility="visible"/>
            </LinearLayout>
        </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>