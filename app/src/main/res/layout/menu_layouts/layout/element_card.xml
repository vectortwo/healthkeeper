<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <!-- A CardView that contains a TextView -->
        <android.support.v7.widget.CardView
                android:id="@+id/elements_card"
                android:layout_gravity="center"
                card_view:cardElevation="4dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"



                card_view:cardBackgroundColor="@color/buttonColor" android:layout_height="wrap_content">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                                android:id="@+id/elements_image"
                                android:background="@drawable/img_walking"
                                android:layout_marginLeft="15dp"
                                android:scaleType="fitStart"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="2dp" android:layout_width="44dp"
                                android:layout_height="44dp"/>
                        <Switch
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:theme="@style/SwitchCompatTheme"
                                android:id="@+id/elements_switch"
                                android:textColor="@color/backgroundColor"
                                android:checked="true"
                                android:text="Switch"
                                android:textSize="24sp" android:textAlignment="textStart"
                                android:layout_marginRight="30dp" android:layout_marginLeft="30dp"
                                android:textStyle="normal|bold" android:textAllCaps="false"/>
                </LinearLayout>
        </android.support.v7.widget.CardView>

</LinearLayout>